<% cache [base_cache_key, category, 'header'] do %>
  <div class="py-md-3 text-uppercase category-title">
    <%= @category.name %>
  </div>
  <% unless @category.description.blank? %>
    <div class="py-3 py-md-0 category-description">
      <% if category_wysiwyg_editor_enabled? %>
        <%= raw @category.description %>
      <% else %>
        <%= @category.description %>
      <% end %>
  <% end %>
  <% if @category.icon&.attachment %>
    <div class="d-none d-md-block pt-4 category-icon">
      <%= lazy_image(
        src: main_app.cdn_image_url(@category.icon.attachment),
        alt: @category.description || I18n.t('aypex.storefront.category_missing_alt'),
        width: 1110,
        height: 300,
        class: 'w-100'
      ) %>
    </div>
  <% end %>
<% end %>

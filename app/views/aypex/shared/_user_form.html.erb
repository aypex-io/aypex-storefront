<div class="form-group mb-5">
  <%= f.email_field :email, class: 'aypex-flat-input', placeholder: I18n.t('aypex.storefront.email') %>
</div>

<div class="form-group mb-4">
  <%= f.password_field :password, class: 'aypex-flat-input', placeholder: I18n.t('aypex.storefront.password') %>
</div>

<div class="form-group mb-5">
  <%= f.password_field :password_confirmation, class: 'aypex-flat-input', placeholder: I18n.t('aypex.storefront.confirm_password') %>
</div>
<div data-hook="signup_below_password_fields"></div>

<% modal_dialog_settings ||= 'modal-dialog-centered modal-dialog-scrollable' %>

<%= turbo_frame_tag :modal do %>
  <div data-controller="modal"
       class="modal fade"
       tabindex="-1"
       aria-hidden="true"
       id="universalModal">

    <div class="modal-dialog <%= modal_dialog_settings %>">
      <div class="modal-content">
        <% if content_for?(:modal_header) %>
          <div class="modal-header">
            <%= yield :modal_header %>
          </div>
        <% end %>

        <% if content_for?(:modal_body) %>
          <div class="modal-body">
            <div class="container">
              <%= yield :modal_body %>
            </div>
          </div>
        <% end %>

        <% if content_for?(:modal_footer) %>
          <div class="modal-footer">
            <div class="container">
              <%= yield :modal_footer %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

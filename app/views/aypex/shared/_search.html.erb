<%= form_tag aypex.products_path, method: :get, class: "d-flex align-items-center" do %>
  <%= search_field_tag :keywords,
                       params[:keywords],
                       placeholder: I18n.t('aypex.storefront.search'),
                       title: I18n.t('aypex.storefront.search'),
                       autofocus: true,
                       autocomplete: false,
                       'aria-label': I18n.t('aypex.storefront.search'),
                       class: " border-0 p-3" %>

  <button type="submit" class="btn border-0 p-0" aria-label="Submit">
    <%= aypex_storefront_svg_tag('search.svg', class: 'd-inline', width: 27, height: 27) %>
  </button>
<% end %>

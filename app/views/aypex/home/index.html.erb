<% if @homepage %>
    <% @homepage.cms_sections.each do |section| %>
      <%= build_section(section) %>
    <% end %>
<% else %>
  <div id="missingHomepage" class="container my-5">
    <div class="row my-5">
      <div class="col-12">
        <figure class="text-center">
          <%= logo %>
        </figure>
      </div>

      <div class="col-12 mb-5 text-center">
        <h1 class="mb-3"><%= I18n.t('aypex.storefront.we_will_be_back') %></h1>
        <h4 class="text-dark"><%= I18n.t('aypex.storefront.we_are_busy_updating', store_name: current_store.name) %></h4>
        <h4 class="text-dark"><%= I18n.t('aypex.storefront.please_check_back_soon') %></h4>
      </div>
    </div>
  </div>
<% end %>

<%= render "aypex/shared/cms/pages/edit_mode", edit_mode: @edit_mode %>
